{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1
    },
    "outline": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "level": {
            "type": "string",
            "enum": ["H1", "H2", "H3"]
          },
          "text": {
            "type": "string",
            "minLength": 1
          },
          "page": {
            "type": "integer",
            "minimum": 1
          }
        },
        "required": ["level", "text", "page"],
        "additionalProperties": false
      }
    }
  },
  "required": ["title", "outline"],
  "additionalProperties": false
}
